<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- Constants -->
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.i18n.reload" value="true" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />
	<constant name="struts.enable.SlashesInActionNames" value="true"/>
	<!-- must have empty comma to allow for empty extension, else Struts interferes with static resources like CSS files  -->
	<constant name="struts.action.extension" value=",html"/>
	
	<package name="fabric" namespace="/fabric" extends="struts-default">
	
		<action name="list" class="com.csc.admin.action.FabricAction" method="list">
			<result name="success">/WEB-INF/content/fabric-list.jsp</result>
			<interceptor-ref name="basicStack"/>
		</action>

		<action name="view/*" class="com.csc.admin.action.FabricAction" method="view">
			<param name="id">{1}</param>
			<result name="success">/WEB-INF/content/fabric-view.jsp</result>
			<interceptor-ref name="basicStack"/>
			<interceptor-ref name="staticParams" />
		</action>
		
		<action name="edit/*" class="com.csc.admin.action.FabricAction" method="edit">
			<param name="id">{1}</param>
			<result name="success">/WEB-INF/content/fabric-edit.jsp</result>
			<interceptor-ref name="basicStack"/>
			<interceptor-ref name="staticParams" />
		</action>
		
		<action name="new" class="com.csc.admin.action.FabricAction" method="add">
			<result name="success">/WEB-INF/content/fabric-add.jsp</result>
			<interceptor-ref name="basicStack"/>
		</action>
		
		<action name="ins" class="com.csc.admin.action.FabricAction" method="insert">
			<result name="success" type="redirectAction">
				<param name="actionName">view</param>
         		<param name="namespace">/fabric</param>
			</result>
			<result name="input">/WEB-INF/content/fabric-add.jsp</result>
			<interceptor-ref name="basicStack"/>
		</action>
		
		<action name="upd" class="com.csc.admin.action.FabricAction" method="update">
			<result name="success" type="redirectAction">view</result>
			<result name="input">/WEB-INF/content/fabric-edit.jsp</result>
			<interceptor-ref name="basicStack"/>
		</action>
		
		<action name="del" class="com.csc.admin.action.FabricAction" method="delete">
			<result name="success" type="redirectAction">list</result>
			<interceptor-ref name="basicStack"/>
		</action>
		
		
	</package>

</struts>